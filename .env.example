# ==============================================================================
# Frontbase Multi-Tenant Environment Configuration
# ==============================================================================
#
# Copy this file to .env and customize for each tenant
# Example: cp .env.example .env.tenant1
#
# ==============================================================================

# ===== Tenant Identification =====
TENANT_ID=1
TENANT_NAME=tenant1

# ===== Port Configuration =====
# Backend API port (default: 8000)
# For multi-tenant: 8000 + TENANT_ID
BACKEND_PORT=8001

# Edge Engine port (default: 3002)
# For multi-tenant: 3002 + TENANT_ID
EDGE_PORT=3003

# Frontend port (default: 8080)
# For multi-tenant: 8080 + TENANT_ID
FRONTEND_PORT=8081

# Redis HTTP proxy port (default: 8079)
# For multi-tenant: 8079 + TENANT_ID
REDIS_HTTP_PORT=8080

# ===== Database Configuration =====
# Database type: sqlite or postgres
DATABASE_TYPE=sqlite

# SQLite database path (for SQLite mode)
# Each tenant should use a unique path
DATABASE_URL=sqlite+aiosqlite:////app/data/frontbase.db

# PostgreSQL configuration (for PostgreSQL mode)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=frontbase_${TENANT_ID}
# POSTGRES_USER=frontbase
# POSTGRES_PASSWORD=your-secure-password

# ===== Security Configuration =====
# Application secret key (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# CORS origins (comma-separated)
CORS_ORIGINS=*

# Admin credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production

# Environment: development, staging, production
ENVIRONMENT=production

# Allow user registration
ALLOW_REGISTRATION=false

# ===== Redis Configuration =====
# Redis HTTP token (generate with: openssl rand -base64 32)
REDIS_TOKEN=dev_token_change_in_production

# ===== External Services =====
# Supabase JWT secret (optional)
SUPABASE_JWT_SECRET=

# Primary domain for preview links (optional)
# PRIMARY_DOMAIN=yourdomain.com

# ===== Docker Compose Project Name =====
# This creates isolated Docker project for each tenant
# Automatically set by deployment script, but can be overridden
# COMPOSE_PROJECT_NAME=tenant1_frontbase

# ==============================================================================
# Multi-Tenant Port Allocation Reference
# ==============================================================================
# Default ports:
#   Backend: 8000
#   Edge: 3002
#   Frontend: 8080
#   Redis HTTP: 8079
#
# For sequential tenants:
#   Tenant 1: 8001, 3003, 8081, 8080
#   Tenant 2: 8002, 3004, 8082, 8081
#   Tenant N: 8000+N, 3002+N, 8080+N, 8079+N
#
# ==============================================================================
