# =============================================================================
# Frontbase Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Options: sqlite (default) or postgres
DATABASE=sqlite

# PostgreSQL password (only needed if DATABASE=postgres)
DB_PASSWORD=your-secure-postgres-password

# -----------------------------------------------------------------------------
# Security (REQUIRED in production)
# -----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-this-in-production

# Admin credentials for Frontbase designer login
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-secure-password

# Set to "production" to enable secure cookies and disable registration
ENVIRONMENT=production

# Set to "true" to allow new admin registrations (disable in production)
ALLOW_REGISTRATION=false

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Use "*" for development only, specify exact domains in production
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# Edge Engine (Hono SSR)
# -----------------------------------------------------------------------------
# Internal URL for FastAPI to reach Edge service (Docker networking)
EDGE_URL=http://edge:3002

# Public URL for preview links
# For Easypanel: Set via docker-compose.yml using PRIMARY_DOMAIN (auto-configured)
# For manual deploy: Set to your domain, e.g.: PUBLIC_URL=https://app.example.com
PUBLIC_URL=https://$(PRIMARY_DOMAIN)

# API keys for webhook authentication (comma-separated)
API_KEYS=your-webhook-api-key-1,your-webhook-api-key-2

# Supabase JWT secret (for end-user app authentication)
# SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# -----------------------------------------------------------------------------
# Redis (for caching)
# -----------------------------------------------------------------------------
REDIS_TOKEN=dev_token_change_in_prod

# -----------------------------------------------------------------------------
# Hybrid Deployment (Edge on Cloudflare/Vercel)
# -----------------------------------------------------------------------------
# When deploying Edge to Cloudflare Workers or Vercel Edge Functions,
# set these env vars on the Edge platform to point to your VPS:
#
# FASTAPI_URL=https://your-vps.com:8000
# UPSTASH_REDIS_REST_URL=https://your-vps.com:8079
# UPSTASH_REDIS_REST_TOKEN=<same-as-REDIS_TOKEN>

# -----------------------------------------------------------------------------
# Frontend (Vite build-time variables)
# -----------------------------------------------------------------------------
# API URL - leave empty for same-origin (recommended for production)
# For local dev: VITE_API_URL=http://localhost:8000
VITE_API_URL=