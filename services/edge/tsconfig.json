{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@frontbase/datatable": [
                "../../packages/datatable/src/index.ts"
            ],
            "@frontbase/datatable/*": [
                "../../packages/datatable/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "public/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}